<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
        x:Class="MusicPlayer.UI.Views.NamePromptWindow"
        Title="NamePromptWindow">
        <StackPanel Margin="10" Spacing="10">
                <TextBlock Text="Entrez le nom de la playlist :" />
                <TextBox x:Name="NameBox" />
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Spacing="5">
                        <Button Content="OK" Click="OnOkClick" />
                        <Button Content="Annuler" Click="OnCancelClick" />
                </StackPanel>
        </StackPanel>
</Window>
