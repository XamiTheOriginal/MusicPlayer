<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:viewModels="clr-namespace:MusicPlayer.UI.ViewModels"
        mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
        x:Class="MusicPlayer.UI.Views.MainWindow"
        x:DataType="viewModels:MainViewModel"
        Title="MusicPlayer">
    <Grid>
        <StackPanel HorizontalAlignment="Left" VerticalAlignment="Top" Margin="20,20,0,20" Spacing="10">
            <Image Source="avares://MusicPlayer/UI/Assets/Logo.png" Width="100" Height="100"/>       
            <Button Content="Lire une chanson" Width="200" Click="Button_OnClick"/>
            <ScrollViewer Width="200" Height="150">
                <ListBox ItemsSource="{Binding Songs}"/>
            </ScrollViewer>
        </StackPanel>
    </Grid>
</Window>
