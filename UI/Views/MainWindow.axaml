<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:viewModels="clr-namespace:MusicPlayer.UI.ViewModels"
        mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
        x:Class="MusicPlayer.UI.Views.MainWindow"
        x:DataType="viewModels:MainViewModel"
        Title="MusicPlayer">
    <Grid RowDefinitions="Auto,*,Auto,Auto" Margin="20">
        <!-- En-tête et liste -->
        <StackPanel Grid.Row="0" HorizontalAlignment="Left" VerticalAlignment="Top" Spacing="10">
            <Image Source="avares://MusicPlayer/UI/Assets/Logo.png" Width="100" Height="100"/>
            <Button Content="Lire une chanson" Width="200" Click="Button_OnClick"/>
            <ScrollViewer Width="200" Height="150">
                <ListBox ItemsSource="{Binding Songs}"/>
            </ScrollViewer>
        </StackPanel>

        <!-- Contrôles média -->
        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,20,0,10" Spacing="20">
            <Button Content="⏮️" Width="50" Height="30"/>
            <Button Content="▶️" Width="50" Height="30"/>
            <Button Content="⏭️" Width="50" Height="30"/>
        </StackPanel>

        <!-- Barre de chargement -->
        <ProgressBar Grid.Row="3" Height="20" Minimum="0" Maximum="100" Value="{Binding Progress}" Margin="0,10,0,0"/>
    </Grid>
</Window>
